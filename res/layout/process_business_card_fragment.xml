<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Spinner
        android:id="@+id/option_export_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/option_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/option_description_hint"
        android:inputType="text"
        android:maxLength="255" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <AutoCompleteTextView
            android:id="@+id/option_add_languages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="@string/option_add_languages" />

        <Button
            android:id="@+id/option_button_manage_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/manage" />

    </LinearLayout>

    <TextView
        android:id="@+id/option_file_path_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/option_file_path_hint"
        />
    <ImageView
        android:id="@+id/option_file_path"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/option_no_file"
        android:scaleType="centerInside"
        android:clickable="true"
        android:visibility="gone" />
</LinearLayout>